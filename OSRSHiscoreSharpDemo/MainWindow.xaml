<Window x:Class="OSRSHiscoreSharpDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSRSHiscoreSharpDemo"
        mc:Ignorable="d"
        Title="OSRSHiscore.NET Demo" Height="800" Width="450"
        Background="#222"
        Foreground="#fff"
        MinHeight="300"
        MinWidth="300"
        FontFamily="Comic Sans MS"
         FontSize="16"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80px" />
            <RowDefinition Height="40px" />
            <RowDefinition Height="25px" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" VerticalAlignment="Top" Margin="5"
        >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Foreground="#fff" VerticalAlignment="Center">Lookup a user</Label>
            <TextBox Grid.Row="1" Name="tbUsername" FontSize="24" VerticalAlignment="Center" Foreground="#fff" Background="#111">
                Dedwilson
            </TextBox>

        </Grid>
        <Grid Grid.Row="1" VerticalAlignment="Top" Margin="5">
            <Button Grid.Column="1" Click = "OnClickLookup">Lookup</Button>
        </Grid>
        <Label Grid.Row="2" Foreground="#fff" VerticalAlignment="Top" FontSize="12px" Margin="0 -5 0 0">
            <TextBlock Name="lbStatus">Waiting...</TextBlock>
        </Label>
        <Label Grid.Row="3" Foreground="#fff" VerticalAlignment="Top" FontSize="12px" Margin="0 -5 0 0">
            <TextBlock Name="lbDebug">[debug]</TextBlock>
        </Label>
    </Grid>
</Window>
