<UserControl x:Class="OSRSHiscoreSharpDemo.StatListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OSRSHiscoreSharpDemo"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="200"
             Background="{Binding Path=PropertyNameColor}"
             Foreground="#fff">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32px"/>
            <ColumnDefinition Width="120px"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Source="{Binding ImagePath}" HorizontalAlignment="Left" 
    Margin="0,0,5,0" Name="image1" Stretch="Uniform" VerticalAlignment="Center" 
     />
        <Label Grid.Column="1" Content="{Binding Path=PropertyName}" VerticalAlignment="Center" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Left" Foreground="#fff" FontSize="10"></Label>

        <Label Grid.Column="2" Content="{Binding Path=Value}" HorizontalContentAlignment="Left" VerticalAlignment="Center"  Foreground="#fff"></Label>
        <Label Grid.Column="3" Content="{Binding Path=Rank}" HorizontalContentAlignment="Left" VerticalAlignment="Center"  Foreground="#fff"></Label>
        <Label Grid.Column="4" Content="{Binding Path=Extra}" HorizontalContentAlignment="Left" VerticalAlignment="Center"  Foreground="#fff"></Label>
    </Grid>

</UserControl>
